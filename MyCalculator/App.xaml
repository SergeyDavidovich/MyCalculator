<Application
    x:Class="MyCalculator.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyCalculator"
    RequestedTheme="Light">

    <Application.Resources>
        <SolidColorBrush x:Key="MemoryButtonColor" Color="Green"/>
        <SolidColorBrush x:Key="CleanButtonColor" Color="Orange"/>
        <SolidColorBrush x:Key="OperatorButtonColor" Color="#FF0079F1"/>
        <SolidColorBrush x:Key="FigureButtonColor" Color="#FF0B427A"/>
        <SolidColorBrush x:Key="MemoryClearButtonColor" Color="#FFFFA404"/>
        <SolidColorBrush x:Key="EqualSymbolButtonColor" Color="#FF0016F3"/>
        <SolidColorBrush x:Key="DiscountButtonColor" Color="Red"/>
    </Application.Resources>

</Application>
